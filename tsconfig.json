{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true
  },
  "env": {
    "node": true,
    "es6": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"],
  "parserOptions": {
    "ecmaVersion": 2020,
    "sourceType": "module"
  }
} 